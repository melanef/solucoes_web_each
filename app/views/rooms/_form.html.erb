<%

url = theater_rooms_path(@theater)

if @room.id
    url = theater_room_path(@theater, @room)
end

%>
<%= form_for @room , url: url do |f| %>

    <% if @room.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(@room.errors.count, "erro") %> impediram este cinema de ser inclu√≠do:
        </h2>
        <ul>
            <% @room.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <p><%= f.submit %></p>
<% end %>